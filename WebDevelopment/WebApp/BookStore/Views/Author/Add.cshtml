@model Author

<h2 class="text-center">New Author Registration</h2>
<form action="/author/add" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control"> @* tag helpers *@
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" type="email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            @foreach(var g in Enum.GetValues<Gender>()) {
                        <option value="@g">@g</option>
                    }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Dob" class="form-label"></label>
        <input asp-for="Dob" type="date" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary mx-auto">Save Author</button>

</form>
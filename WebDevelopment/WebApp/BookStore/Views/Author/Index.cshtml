@{
    ViewData["Title"] = "Author";
}
@model List<Author>

<a href="/author/add" class="btn btn-primary mb-4">Add Author</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">S.N</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Dob</th>
            <th scope="col">Changes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
                <td>@author.Address</td>
                <td>@author.Email</td>
                <td>@author.Gender</td>
                <td>@author.Dob.ToLongDateString()</td>
                <td> <a href="/author/edit/@author.Id" class="btn btn-outline-primary"><i class="bi bi-pen" title="Edit"></i></a>
                    <form method="post" action="/author/delete" style="display:inline;">
                        <input type="hidden" name="id" value="@author.Id">
                        <button type="submit" class="btn btn-outline-danger"><i class="bi bi-trash" title="Delete"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>